{% extends 'base.html.twig' %}

{% block title %}Réinitialise ton mot de passe{% endblock %}

{% block body %}
   <div class="row">
      <div class="col-md-6 mx-auto">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialise ton mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons unlien pour réinitialiser votre mot de passe
            </small>
        </div>

        <button class="btn btn-primary btn-block">Envoyer </button>
    {{ form_end(requestForm) }}
     </div>
    </div>
{% endblock %}