{% extends 'base.html.twig' %}

{% block title %}Connectez-vous!{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1 class="mt-5 mb-3 text-center h5 text-muted">Connectez-vous SVP</h1>
      <p class="text-center text-muted">Vos pins sont disponibles</p>
      <form method="post">
       {% if error %}
          <div class="alert alert-error rounded mb-3"role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="email" 
        class="form-control" required autofocus>
    </div>

    <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" name="password" id="password"
        class="form-control" required>
    </div>

    
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}
    <div class="d-flex justify-content-between">
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi.
            </label>
        </div>
           <a href="{{path('app_forgot_password_request')}}">mot de passe oublié ?</a>
    </div>
   

    <button class="btn btn-lg btn-block btn-primary" type="submit">
        Connexion
    </button>
       <p class="mt-5 mb-3 text-center text-muted">vous n'êtes pas encore inscrit?
       <a href="{{path('app_register')}}">Créer un compte</a></p>
</form>
</div>
</div>
{% endblock %}
